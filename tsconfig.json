{
  "compilerOptions": {
    "outDir": "./dist/",
    "removeComments": true,
    "noResolve": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}